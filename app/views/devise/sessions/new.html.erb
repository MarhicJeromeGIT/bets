<div class="page-header">
<h1>Identification
<small>Entrez votre pseudonyme et votre mot de passe.</small></h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group input-group-lg">
    <%= f.label :email, class: "input-group-addon" %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="input-group input-group-lg">
    <%= f.label :password, class: "input-group-addon" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="input-group input-group-lg">
      <%= f.label :remember_me, class: "input-group-addon" %>
      <%= f.check_box :remember_me, class: "form-control" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
