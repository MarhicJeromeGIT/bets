<div class="page-header">
<h1>Nouveau Joueur
<small>Choisissez un pseudonyme et un mot de passe et entrez votre adresse email.</small></h1>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group input-group-lg">
  	<%= f.label :name, class: "input-group-addon" %>
  	<%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  
  <div class="input-group input-group-lg">
    <%= f.label :email, class: "input-group-addon" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="input-group input-group-lg">
    <%= f.label :password ,class: "input-group-addon" %>
    <% placeholder="" %>
    <% if @minimum_password_length %>
      <% placeholder = "#{@minimum_password_length} characters minimum" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder:placeholder, class: "form-control" %>
  </div>

  <div class="input-group input-group-lg">
    <%= f.label :password_confirmation, class: "input-group-addon" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
